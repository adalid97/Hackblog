{% extends 'blogBase.html.twig' %}
{% block titulo %}Noticia{% endblock %}
{% block main %}
    <p class="small"><a href="{{ path('index') }}">‚Üê Volver a portada</a></p>
    <h2>{{ noticia.titular }}</h2>
    <p class="small">Publicado en: {{ noticia.fecha|date("d/m/Y") }}</p>
    <div id="imgcover"><img src='{{ asset('images/cover-' ~ noticia.id ~ '.png') }}'/></div>
    {{ noticia.cuerpo }}
    <h2>Comentarios</h2>


    <p><a href="{{ path('editarNoticia', {'id' : noticia.id}) }}">Editar Noticia</a></p>
    <p><a href="{{ path('borrarNoticia', {'id' : noticia.id}) }}">Borrar Noticia</a></p>
{% endblock %} 
